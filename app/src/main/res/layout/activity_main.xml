                android:background="@color/greynumber"
                android:text="%"
                android:textColor="@color/colornumberbl"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button24"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:background="@color/orangenumber"
                android:text="รท"
                android:textColor="@color/colornumberwh"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
